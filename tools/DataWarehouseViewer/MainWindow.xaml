        <Grid
            Grid.Row="3"
            Opacity="1"
            Style="{DynamicResource FooterGrid}">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Click="OnOKButtonClick"
                    Content="OK"
                    IsDefault="True"
